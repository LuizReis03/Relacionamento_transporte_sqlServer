CREATE DATABASE DB_REIS

--DROP TABLE VEICULO
--DROP TABLE CARGA
--DROP TABLE TRANSPORTA

USE DB_REIS

CREATE TABLE veiculo (
    codvei int PRIMARY KEY,
    nomevei varchar(50),
    corvei varchar(30),
    vlrvei numeric(12,2),
    qtdevei int
);

CREATE TABLE carga (
    codcar int PRIMARY KEY,
    nomecar varchar (50),
    tipocar varchar (50),
    pesocar numeric(6,2),
    vlrtotcar numeric(12,2)
);

CREATE TABLE transporta (
    fk_veiculo_codvei int FOREIGN KEY REFERENCES carga (codcar),
    fk_carga_codcar int FOREIGN KEY REFERENCES veiculo (codvei),
    codtra int PRIMARY KEY,
    nometra varchar(50),
    distanciatra numeric(6,2),
    vlrtottra numeric(12,3)
);

SELECT * FROM veiculo
